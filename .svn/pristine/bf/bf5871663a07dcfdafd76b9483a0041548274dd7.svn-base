using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Observer : MonoBehaviour
{
    private Transform m_player;
    private PlayerMovement m_playerMovement;
    private GameEnding m_gameEnding;

    private void Start()
    {
        m_player = GameObject.Find("JohnLemon").transform;
        m_playerMovement = m_player.GetComponent<PlayerMovement>();
        m_gameEnding = GameObject.Find("GameEnding").GetComponent<GameEnding>();
    }
    void OnTriggerEnter(Collider other)
    {
        if (other.transform == m_player)
        {
            CheckPlayer();
        }
    }

    void OnTriggerExit(Collider other)
    {
        if (other.transform == m_player)
        {
            m_playerMovement.Escape();
        }
    }

    void CheckPlayer()
    {
        Vector3 direction = m_player.position - transform.position + Vector3.up;
        Ray ray = new Ray(transform.position, direction);
        RaycastHit raycastHit;

        if (Physics.Raycast(ray, out raycastHit))
        {
            if (raycastHit.collider.transform == m_player)
            {
                m_playerMovement.Caughted();
            }
        }
    }
}
